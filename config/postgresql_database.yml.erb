---
defaults: &defaults
  adapter: postgresql
  encoding: unicode
  connect_timeout: 3
  pool: 5 # max number of possible simultaneous database connections per process
  timeout: 3000
  host: <%= ENV["DATABASE_HOST"] %>
  username: <%= ENV["DATABASE_USERNAME"] %>
  password: <%= ENV["DATABASE_PASSWORD"] %>
  namespace: wormstorysearch
  reaper_frequency: 0


production:
  <<: *defaults
  database: wormstorysearch

development:
  <<: *defaults
  database: wormstorysearch_development

test:
  <<: *defaults
  database: wormstorysearch_test
